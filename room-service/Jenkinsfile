pipeline{
    
    agent any
    
    stages {
    
    	stage("Build Application"){
    	
    		steps{
    			sh "echo Performing Maven build:"
    		}
    	}
    	
    	stage("Build Container Image"){
    	
    		steps{
    			sh "echo Building container image:"
    		}
    	}
    	
    	stage("Publish Container Image"){
    	
    		steps{
    			sh "echo Publishing container image to:"
    		}
    	}    	    	
    }
}
